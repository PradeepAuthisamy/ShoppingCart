@model ShoppingCart.Models.BookList

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-controller="Books" asp-action="Create">Create New Book</a>
    </div>
</div>
<table class="table table-striped table-bordered border">
    <tr class="table-secondary">
        <th>ID</th>
        <th>Name</th>
        <th>Author</th>
        <th></th>
    </tr>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.ID</td>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>
                @*<button asp-controller="Books" asp-action="Delete" asp-route-id="@book.ID" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>*@
                <a class="btn btn-danger btn-sm" asp-controller="Books" asp-action="Delete" asp-route-id="@book.ID" onclick="return confirm('Are you sure, you want to delete the book?')">Delete</a>
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.ID" class="btn btn-success btn-sm text-white">Edit</a>
            </td>
        </tr>
    }
</table>